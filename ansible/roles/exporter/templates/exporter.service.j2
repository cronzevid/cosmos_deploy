[Unit]
Description=Run metrics exporter
After=network.target network-online.target gaiad.service

[Service]
ExecStart=/usr/local/bin/cosmos-exporter -config-path /home/{{ gaiad.user }}/.gaia/config/addrbook.json
TimeoutStartSec=600
Restart=always
User=exporter
Group=exporter

PrivateDevices=true
ProtectControlGroups=true
ProtectKernelTunables=true
ProtectSystem=full
RestrictSUIDSGID=true

CapabilityBoundingSet=CAP_NET_BIND_SERVICE

ProtectKernelLogs=true
ProtectKernelModules=true
RestrictNamespaces=true
RestrictAddressFamilies=AF_INET
NoNewPrivileges=true
PrivateTmp=true
ProtectClock=true
SystemCallArchitectures=native

[Install]
WantedBy=multi-user.target
